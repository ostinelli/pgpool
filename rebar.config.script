case erlang:function_exported(rebar3, main, 1) of
    true ->
    	%% rebar3
        CONFIG;
    false ->
    	%% rebar 2.x or older
        [{deps, [
		    {epgsql, ".*", {git, "git://github.com/epgsql/epgsql.git", {tag, "3.4.0"}}},
		    {poolboy, ".*", {git, "git://github.com/devinus/poolboy.git", {tag, "1.5.2"}}}
		]} | lists:keydelete(deps, 1, CONFIG)]
end.
